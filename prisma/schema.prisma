generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String          @id @default(uuid())
  username      String          @unique
  email         String
  password      String
}

model Client {
  id            String          @id @default(uuid())
  name          String          @unique
  city          String
  address       String
  telephone     String
  status        ClientStatus    @default(ACTIVE)

  workOrders    WorkOrder[]
}

model WorkOrder {
  id                      String            @id @default(uuid())
  workOrderNumber         String            @unique
  estimatedFinishDate     DateTime
  worker                  String

  client                  Client            @relation(fields: [clientId], references: [id])
  clientId                String

  notes                   String?
  itemDescription         String
  quantity                Int
  price                   Int

  createdDate             DateTime          @default(now())
  status                  WorkOrderStatus   @default(NOT_STARTED)

  invoice                 Invoice?
}

model Invoice {
  id                      String            @id @default(uuid())
  invoiceNumber           String            @unique

  workOrder               WorkOrder         @relation(fields: [workOrderNumber], references: [workOrderNumber])
  workOrderNumber         String            @unique

  status                  InvoiceStatus
}

enum ClientStatus {
  ACTIVE
  INACTIVE
}

enum WorkOrderStatus {
  NOT_STARTED
  IN_PROGRESS
  COMPLETED
  CANCELLED
}

enum InvoiceStatus {
  PAID
  UNPAID
}